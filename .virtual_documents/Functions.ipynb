#  Arbitrary argument lists
def average(*args):
    return sum(args)/len(args)


average(5, 10)


average(5, 10, 15)


average(5, 10, 55, 20)


grades = [88, 75, 96, 55, 83]

#  *operator, when applied to an iterable argument in a function, unpacks its elements.
average(*grades)


def calculate_product(*args):
    p = 1
    for i in args:
        p *= i
    return p


calculate_product(5, 1)





calculate_product(10, 20, 30)


calculate_product(*range(1, 6, 2))


ite = range(1, 6, 2)
calculate_product(*ite)



