'''The tortoise and the hare'''
import random as random


def tortoise():
    v = random.randrange(1, 11)
    if v >= 1 and v <= 5:
        print("Fast plod")
        p = "Fast plod"
    if v >= 6 and v <= 7:
        print("Slip")
        p = "Slip"
    if v >= 8 and v <= 10:
        print("Slow pod")
        p = "Slow pod"

    return p



def hare():
    v = random.randrange(1, 11)
    if v >= 1 and v <= 2:
        print("Sleep")
        p = 'Sleep'
    if v >= 3 and v <= 4:
        print("Big Hop")
        p = 'Big Hop'
    if v == 5:
        print("Big Slip")
        p = 'Big Slip'
    if v >= 6 and v <= 8:
        print("Small Hop")
        p = 'Small Hop'
    if v >= 9 and v <= 10:
        print("Small Slip")
        p = 'Small Slip'
    print(p)
    return p

